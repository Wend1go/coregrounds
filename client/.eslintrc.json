{
  "extends": ["eslint:recommended", "prettier"],
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "$": true,
    "$$": true,
    "Screens": true,
    "setBodyClass": true
  },
  "plugins": ["prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-bitwise": ["off"],
    "consistent-return": [0],
    "no-underscore-dangle": [0],
    "max-nested-callbacks": [1, 3],
    "no-plusplus": [
      1,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-param-reassign": [0],
    "no-prototype-builtins": [0],
    "valid-jsdoc": [
      1,
      {
        "prefer": {
          "returns": "return",
          "property": "prop"
        },
        "requireReturn": false
      }
    ],
    "brace-style": ["error", "1tbs"],
    "no-unused-vars": [1],
    "import/prefer-default-export": "off",
    "prefer-destructuring": "off",
    "no-console": "off"
  }
}
